<?xml version='1.0' encoding='utf-8'?>
<widget id="fr.nyapay" version="2.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <icon src="www/images/icon_app/icon.png" />
    <name>NYAPAY</name>
    <description>
        Application de paiement ferm√©
    </description>
    <author email="nya@yannicknya.fr" href="https://yannicknya.fr">
        Yannick NYA
    </author>
    <content src="page-presentation.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="StatusBarBackgroundColor" value="#00000" />
    <preference name="StatusBarStyle" value="default" />
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
    <preference name="ShowSplashScreen" value="false" />
</widget>
